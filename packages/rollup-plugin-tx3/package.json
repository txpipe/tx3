{
  "name": "rollup-plugin-tx3",
  "version": "0.1.0",
  "description": "A rollup plugin to generate bindings for Tx3 files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/txpipe/tx3.git"
  },
  "keywords": [
    "rollup-plugin",
    "tx3",
    "utxo",
    "blockchain",
    "cardano"
  ],
  "author": "TxPipe",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/txpipe/tx3/issues"
  },
  "homepage": "https://github.com/txpipe/tx3#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "rollup": "^4.34.9",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "glob": "^11.0.1",
    "@types/node": "^22.13.8",
    "vitest": "^1.3.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@types/jest": "^29.5.12"
  }
}
